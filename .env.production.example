# =============================================================================
# OUAGA CHAP - PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# SECURITY: Never commit actual production values to version control
# =============================================================================

APP_NAME="OUAGA CHAP"
APP_ENV=production
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_TIMEZONE=Africa/Ouagadougou
APP_URL=https://api.ouagachap.com

# =============================================================================
# DATABASE
# =============================================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=ouagachap_production
DB_USERNAME=ouagachap_user
DB_PASSWORD=STRONG_PASSWORD_HERE

# =============================================================================
# CACHE & SESSION
# =============================================================================
CACHE_STORE=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true

# =============================================================================
# QUEUE
# =============================================================================
QUEUE_CONNECTION=redis

# =============================================================================
# REDIS
# =============================================================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# =============================================================================
# MAIL (for admin notifications)
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@ouagachap.com"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# LOGGING
# =============================================================================
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_LEVEL=info
LOG_DAILY_DAYS=30
LOG_SECURITY_DAYS=90
LOG_PAYMENT_DAYS=365

# =============================================================================
# SECURITY - SANCTUM
# =============================================================================
SANCTUM_STATEFUL_DOMAINS=api.ouagachap.com
SESSION_DOMAIN=.ouagachap.com

# =============================================================================
# SECURITY - CORS
# =============================================================================
# Restrict to your mobile app in production
CORS_ALLOWED_ORIGINS=*

# =============================================================================
# FILAMENT ADMIN
# =============================================================================
FILAMENT_SUPER_ADMIN_EMAIL=admin@ouagachap.com

# =============================================================================
# SMS PROVIDER (Twilio example)
# =============================================================================
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=

# =============================================================================
# FIREBASE (Push Notifications & Phone Auth)
# =============================================================================
FIREBASE_PROJECT=ouaga-chap
FIREBASE_CREDENTIALS=/var/www/ouagachap/storage/firebase-credentials.json

# =============================================================================
# OTP / AUTHENTIFICATION
# =============================================================================
# Driver: firebase (recommandé), sms, log
AUTH_OTP_DRIVER=firebase

# Fallback SMS si Firebase échoue
AUTH_OTP_FALLBACK_SMS=true

# Mode démo (NE PAS activer en production !)
AUTH_OTP_DEMO_MODE=false

# Max tentatives par heure par numéro
AUTH_OTP_MAX_ATTEMPTS=5

# =============================================================================
# PAYMENT PROVIDER (Mobile Money - Production)
# =============================================================================
PAYMENT_ORANGE_API_KEY=
PAYMENT_ORANGE_SECRET=
PAYMENT_MOOV_API_KEY=
PAYMENT_MOOV_SECRET=
PAYMENT_WEBHOOK_SECRET=

# =============================================================================
# GOOGLE MAPS
# =============================================================================
GOOGLE_MAPS_API_KEY=

# =============================================================================
# SECURITY HEADERS
# =============================================================================
# Force HTTPS in production
FORCE_HTTPS=true
