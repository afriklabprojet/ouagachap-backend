APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# =============================================================================
# SMS (OTP & Notifications)
# =============================================================================
# Driver: "twilio" for production, "log" for development
SMS_DRIVER=log

# Twilio Configuration (get from twilio.com/console)
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=+1234567890

# =============================================================================
# FIREBASE (Push Notifications & Phone Auth)
# =============================================================================
# Download service account JSON from Firebase Console
# Project Settings > Service Accounts > Generate new private key
FIREBASE_CREDENTIALS=storage/app/firebase/firebase-credentials.json
# Optional: Set project ID if not in credentials file
# FIREBASE_PROJECT=ouaga-chap

# =============================================================================
# OTP / AUTHENTIFICATION
# =============================================================================
# Driver: "firebase" (recommended), "sms", "log"
AUTH_OTP_DRIVER=firebase

# Fallback to SMS if Firebase fails
AUTH_OTP_FALLBACK_SMS=false

# Demo mode - accepts code 123456 (DO NOT enable in production!)
AUTH_OTP_DEMO_MODE=true

# Demo code (only if demo_mode=true)
AUTH_OTP_DEMO_CODE=123456

# Max attempts per phone per hour
AUTH_OTP_MAX_ATTEMPTS=5

# =============================================================================
# SANCTUM (API Token Authentication)
# =============================================================================
# Token expiration in minutes (default: 43200 = 30 days)
# Set to null for no expiration (not recommended for production)
SANCTUM_TOKEN_EXPIRATION=43200

# =============================================================================
# CORS (Cross-Origin Resource Sharing)
# =============================================================================
# In production, restrict to your app domains
# Comma-separated list of allowed origins, or * for all (dev only)
CORS_ALLOWED_ORIGINS=*

# =============================================================================
# JEKO PAYMENTS (Mobile Money)
# =============================================================================
JEKO_API_KEY=your-api-key
JEKO_API_KEY_ID=your-api-key-id
JEKO_STORE_ID=your-store-id
JEKO_BASE_URL=https://api.jeko.africa
JEKO_SANDBOX=true

# CRITICAL: Webhook signature verification (HMAC-SHA256)
# Get this from your JEKO dashboard
JEKO_WEBHOOK_SECRET=your-webhook-secret-here

JEKO_CALLBACK_URL="${APP_URL}/api/v1/jeko/webhook"